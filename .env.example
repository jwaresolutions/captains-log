# Database Configuration
DB_NAME=boat_tracking
DB_USER=boat_user
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production-minimum-32-characters
JWT_EXPIRATION=30d

# Initial Setup (only used when no users exist)
# Remove these after first user is created for security
INITIAL_USER=
INITIAL_PASSWORD=

# Environment
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Storage
MAX_PHOTO_SIZE_MB=50

# Backup
AUTO_BACKUP_ENABLED=false
AUTO_BACKUP_SCHEDULE=0 2 * * *

# Logging
LOG_LEVEL=info
