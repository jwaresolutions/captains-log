# Database Configuration
DB_NAME=boat_tracking
DB_USER=boat_user
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production-minimum-32-characters
JWT_EXPIRATION=30d

# Initial Setup (only used when no users exist)
# Remove these after first user is created for security
INITIAL_USER=
INITIAL_PASSWORD=

# Environment
NODE_ENV=production
ALLOWED_ORIGINS=https://boat.jware.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Storage
MAX_PHOTO_SIZE_MB=50

# Backup
AUTO_BACKUP_ENABLED=false
AUTO_BACKUP_SCHEDULE=0 2 * * *

# Logging
LOG_LEVEL=info

# Frontend Configuration
# Default server URL for client applications (Android/Web)
# Android and Web apps will use this as the default server address
# Web app will automatically append /api/v1 to this URL
DEFAULT_SERVER_URL=https://boat.jware.dev
